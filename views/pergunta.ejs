<%- include('partials/header.ejs') %>
<body>
    <%- include('partials/navbar.ejs') %>
    <div class="container">
        <hr>
        <h1><%= pergunta.titulo %></h1>                <!-- EXIBE O TITULO DA PERGUNTA ENCONTRADA -->
        <P><%= pergunta.descricao %></P>               <!-- EXIBE A DESCRIÇÃO DA PERGUNTA ENCONTRADA -->
        <hr>
        <form method="POST" action="/responder">        <!-- FORMULARIO COM METODO POST QUE ENVIA INFORMAÇÕES PARA O BANCO DE DADOS SEM RECEBER NA URL, ESTÁ SENDO DIRECIONADO PARA A ROTA /responder -->
            <h3>Responda</h3>
            <label>Resposta:</label>
            <textarea placeholder="Digite sua resposta" class="form-control" name="corpo"></textarea><br>
            <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
            <button type="submit" class="btn btn-primary">Responder</button>
        </form>
        <hr>
        <h3>Respostas</h3>
        <hr>
        <% respostas.forEach(resposta => {%>
            <br>
            <div class="card">
                <div class="cars-body">
                    <p><%= resposta.corpo %></p>
                </div>
            </div>
        <%})%>
    </div>
</body>
<%- include('partials/footer.ejs') %>
